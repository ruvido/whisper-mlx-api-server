# Whisper MLX API Configuration

# Server settings
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# Whisper model settings
DEFAULT_MODEL=distil-medium.en
DEFAULT_BATCH_SIZE=12
MAX_FILE_SIZE=104857600  # 100MB in bytes

# Available models (comma-separated)
AVAILABLE_MODELS=tiny,tiny.en,base,base.en,small,small.en,medium,medium.en,large,large-v1,large-v2,large-v3,distil-small.en,distil-medium.en,distil-large-v2,distil-large-v3

# Security
ENABLE_CORS=true
ALLOWED_ORIGINS=*

# Performance
WORKERS=1  # MLX doesn't support multiple workers well
RELOAD=false  # Set to true for development